<Page x:Class="TrabalhoCSharp.View.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrabalhoCSharp.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Button Grid.Column="0" Grid.Row="0" Click="Button_Click_3">Cadastrar Jogo</Button>
        <Button Grid.Column="1" Grid.Row="0" Click="Button_Click">Listar Jogos</Button>

        <Button Grid.Column="0" Grid.Row="1" Click="Button_Click_1">Cadastrar Categoria</Button>
        <Button Grid.Column="1" Grid.Row="1" Click="Button_Click_2">Listar Categorias</Button>


    </Grid>
</Page>
